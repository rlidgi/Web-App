<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- HTTPS Redirect - DISABLED FOR LOCAL DEV -->
    <!--
    <rewrite>
      <rules>
        <rule name="HTTP to HTTPS redirect" stopProcessing="true">
          <match url="(.*)" />
